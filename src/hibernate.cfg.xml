<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
      <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
      <property name="hibernate.connection.url">jdbc:mysql://localhost/scada</property>
      <property name="hibernate.connection.username">root</property>
      <property name="hibernate.connection.password"></property>
      <property name="show_sql">false</property>
      <property name="hibernate.format_sql">true</property>
      <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
      <property name="hibernate.hbm2ddl.auto">update</property>
      <property name="hibernate.generate_statistics">false</property>
      
      <mapping class="renan.modelo.Operador" />
      <mapping class="renan.modelo.GrupoOperador" />
      <mapping class="renan.modelo.FuncionalidadeGrupoOperador" />
      <mapping class="renan.modelo.TipoArmamento" />
      <mapping class="renan.modelo.Armamento" />
      <mapping class="renan.modelo.Cliente" />
      <mapping class="renan.modelo.MovimentacaoDeArmamento" />
      <mapping class="renan.modelo.Configuracao" />

</session-factory>
</hibernate-configuration>